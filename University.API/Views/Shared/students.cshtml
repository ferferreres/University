<div>
    
    <input type="text" class="form-control" ng-model="search" placeholder="Busca aqui..." />
    <br />

    <div>
        <table class="table table-bordered">
            <tr>
                <th>
                    FullName
                </th>
            </tr>

            <tr ng-repeat="student in students | filter: search">
                <td>
                    <a href="#" ng-click="showStudentById(student.ID)" style="color:blue">{{student.FullName}}</a>
                </td>
            </tr>
        </table>
    </div>
    <div ng-show="studentInfo">
        <table class="table table-bordered">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    First Mid Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Enrollment Date
                </th>
            </tr>
            <tr>
                <td>
                    {{studentInfo.ID}}
                </td>
                <td>
                    {{studentInfo.FirstMidName}}
                </td>
                <td>
                    {{studentInfo.LastName}}
                </td>
                <td>
                    {{studentInfo.EnrollmentDate | date : short}}
                </td>
            </tr>
        </table>
        <a href="#" ng-click="removeStudent(studentInfo.ID)" style="color:red">Borrar alumno de la base de datos.</a><br />
    </div>
    <form ng-submit="addStudent()">Formulario para añadir un alumno nuevo
        <input type="text" class="form-control" ng-model="newStudent.LastName" placeholder="Last Name"/>
        <input type="text" class="form-control" ng-model="newStudent.FirstMidName" placeholder="First Mid Name"/>
        <input type="datetime-local" class="form-control" ng-model="newStudent.EnrollmentDate" placeholder="Enrollment Date"/><br />
        <input type="submit" value="Añadir Alumno"/><br/>
    </form>
</div>

